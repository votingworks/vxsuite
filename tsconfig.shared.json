{
  "compilerOptions": {
    // Allow use of newer APIs since we're in recent enough versions of
    // NodeJS/Electron, but don't yet target ES2021 syntax since some of our
    // tooling can't handle it (i.e. react-scripts).
    "target": "ES2019",
    "lib": ["ES2021"],

    // Enable all strict mode checks
    "strict": true,

    // Compile modules independently for non-`tsc` tooling
    "isolatedModules": true,

    // Don't allow both e.g. "foo.ts" and "Foo.ts" for the same file.
    "forceConsistentCasingInFileNames": true,

    // Require `[…]` and not dots for accessing index properties.
    "noPropertyAccessFromIndexSignature": true,

    // Treat `[…]` property accesses as potentially undefined.
    "noUncheckedIndexedAccess": true
  }
}

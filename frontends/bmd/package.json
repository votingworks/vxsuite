{
  "name": "@votingworks/bmd",
  "version": "0.1.0",
  "private": true,
  "files": [
    "build",
    "Makefile",
    "prodserver"
  ],
  "scripts": {
    "type-check": "tsc --build",
    "build": "tsc --build && react-scripts build",
    "build:watch": "tsc --build --watch",
    "build:resources": "res-to-ts --rootDir data --outDir src/data 'data/**/*.json'",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --browser chrome",
    "format": "prettier '**/*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)' --write",
    "lint": "pnpm type-check && eslint . && pnpm stylelint:run",
    "lint:fix": "pnpm type-check && eslint . --fix && pnpm stylelint:run -- --fix",
    "start": "react-scripts start",
    "stylelint:run": "stylelint 'src/**/*.{js,jsx,ts,tsx}' && stylelint 'src/**/*.css' --config .stylelintrc-css.js",
    "test": "is-ci test:ci test:watch",
    "test:ci": "TZ=UTC CI=true react-scripts test --maxWorkers 2 --env=jest-environment-jsdom-sixteen --coverage && pnpm build:resources -- --check",
    "test:coverage": "TZ=UTC react-scripts test --coverage --watchAll=false --env=jest-environment-jsdom-sixteen",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache --env=jest-environment-jsdom-sixteen",
    "test:e2e": "is-ci \"test:e2e:ci\" \"test:e2e:watch\"",
    "pretest:e2e:ci": "pnpm build",
    "test:e2e:ci": "start-server-and-test start http://localhost:3000 cypress:run",
    "test:e2e:watch": "start-server-and-test start http://localhost:3000 cypress:open",
    "test:update": "TZ=UTC react-scripts test -u  --watchAll=false --env=jest-environment-jsdom-sixteen",
    "test:watch": "TZ=UTC react-scripts test --env=jest-environment-jsdom-sixteen",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "stylelint",
      "eslint --quiet --fix"
    ],
    "*.css": [
      "stylelint --config .stylelintrc-css.js --fix"
    ],
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/config/*",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/contexts/ballot_context.ts",
      "!src/serviceWorker.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "lines": 100,
        "functions": 100
      }
    }
  },
  "resolutions": {
    "**/@babel/parser": "7.8.4"
  },
  "dependencies": {
    "@rooks/use-interval": "^4.5.0",
    "@types/dompurify": "^2.0.4",
    "@types/fetch-mock": "^7.3.2",
    "@types/jest": "25.2.2",
    "@types/lodash.camelcase": "^4.3.6",
    "@types/node": "12.19.16",
    "@types/pluralize": "^0.0.29",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.7",
    "@votingworks/ballot-encoder": "workspace:*",
    "@votingworks/fixtures": "workspace:*",
    "@votingworks/logging": "workspace:*",
    "@votingworks/qrcode.react": "^1.0.1",
    "@votingworks/types": "workspace:*",
    "@votingworks/ui": "workspace:*",
    "@votingworks/utils": "workspace:*",
    "abortcontroller-polyfill": "^1.4.0",
    "debug": "^4.3.2",
    "dompurify": "^2.0.17",
    "fetch-mock": "^9.5.0",
    "history": "^4.10.1",
    "http-proxy-middleware": "1.0.6",
    "lodash.camelcase": "^4.3.0",
    "luxon": "^1.26.0",
    "mockdate": "^3.0.2",
    "moment": "^2.29.0",
    "normalize.css": "^8.0.1",
    "pluralize": "^8.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-gamepad": "^1.0.3",
    "react-idle-timer": "4.2.12",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "rxjs": "^6.6.6",
    "styled-components": "^4.4.1",
    "typescript": "^4.3.5",
    "use-interval": "^1.2.1",
    "zod": "3.2.0"
  },
  "devDependencies": {
    "@codemod/parser": "^1.0.7",
    "@testing-library/cypress": "^8.0.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^13.5.0",
    "@types/debug": "^4.1.6",
    "@types/history": "^4.7.8",
    "@types/kiosk-browser": "workspace:*",
    "@types/luxon": "^1.26.2",
    "@types/react-gamepad": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "@votingworks/res-to-ts": "workspace:*",
    "@votingworks/test-utils": "workspace:*",
    "chalk": "^4.1.2",
    "cypress": "^9.5.4",
    "eslint": "^7.17.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-vx": "workspace:*",
    "is-ci-cli": "^2.0.0",
    "jest-date-mock": "^1.0.8",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-fetch-mock": "^3.0.3",
    "jest-styled-components": "^6.3.4",
    "lint-staged": "^10.2.4",
    "prettier": "^2.1.1",
    "react-dev-utils": "^11.0.3",
    "react-refresh": "^0.10.0",
    "sort-package-json": "^1.50.0",
    "start-server-and-test": "^1.11.0",
    "stylelint": "^13.3.3",
    "stylelint-config-palantir": "^4.0.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0"
  },
  "engines": {
    "node": ">= 12"
  },
  "vx": {
    "isBundled": true,
    "services": [
      "../../services/smartcards"
    ]
  }
}

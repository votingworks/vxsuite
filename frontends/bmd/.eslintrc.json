{
  "extends": ["plugin:vx/react"],
  "rules": {
    "vx/gts-jsdoc": "off"
  },
  "overrides": [
    {
      "files": "cypress/**/*",
      "env": {
        "cypress/globals": true
      },
      "parserOptions": {
        "project": "./cypress/tsconfig.json"
      },
      "extends": ["plugin:cypress/recommended"]
    },
    {
      "files": ["*.test.tsx", "test/**/*.tsx"],
      "rules": {
        "react/jsx-no-constructed-context-values": "off"
      }
    }
  ]
}

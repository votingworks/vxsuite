{
  "extends": ["plugin:vx/react"],
  "rules": {
    "vx/gts-identifiers": [
      "error",
      {
        "allowedNames": ["HStack", "VStack", "setXScaleValue", "setYScaleValue"]
      }
    ],
    "vx/gts-jsdoc": "off"
  },
  "overrides": [
    {
      "files": ["*.test.tsx", "test/**/*.tsx"],
      "rules": {
        "react/jsx-no-constructed-context-values": "off"
      }
    }
  ]
}

{
  "name": "@votingworks/bsd",
  "version": "0.1.0",
  "private": true,
  "files": [
    "build",
    "Makefile",
    "prodserver"
  ],
  "scripts": {
    "type-check": "tsc --build",
    "build": "tsc --build && react-scripts build",
    "build:watch": "tsc --build --watch",
    "eject": "react-scripts eject",
    "format": "prettier '**/*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)' --write",
    "lint": "pnpm type-check && eslint . && pnpm stylelint:run",
    "lint:fix": "pnpm type-check && eslint . --fix && pnpm stylelint:run:fix",
    "start": "react-scripts start",
    "stylelint:run": "stylelint 'src/**/*.{js,jsx,ts,tsx}' && stylelint 'src/**/*.css' --config .stylelintrc-css.js",
    "stylelint:run:fix": "stylelint 'src/**/*.{js,jsx,ts,tsx}' --fix && stylelint 'src/**/*.css' --config .stylelintrc-css.js --fix",
    "test": "is-ci test:coverage test:watch",
    "test:watch": "TZ=UTC react-scripts test --env=jest-environment-jsdom-sixteen",
    "test:coverage": "TZ=UTC react-scripts test --coverage --watchAll=false",
    "test:debug": "TZ=UTC react-scripts --inspect-brk test --runInBand --no-cache",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "stylelint",
      "eslint --quiet --fix"
    ],
    "*.css": [
      "stylelint --config .stylelintrc-css.js --fix"
    ],
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 67,
        "branches": 59,
        "functions": 64,
        "lines": 67
      }
    }
  },
  "dependencies": {
    "@types/jest": "24.0.11",
    "@types/node": "16.11.29",
    "@types/pluralize": "^0.0.29",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/styled-components": "^5.1.7",
    "@votingworks/ballot-interpreter-vx": "workspace:*",
    "@votingworks/logging": "workspace:*",
    "@votingworks/types": "workspace:*",
    "@votingworks/ui": "workspace:*",
    "@votingworks/utils": "workspace:*",
    "buffer": "^6.0.3",
    "fast-text-encoding": "^1.0.2",
    "http-proxy-middleware": "1.0.6",
    "js-file-download": "^0.4.6",
    "mockdate": "^3.0.2",
    "moment": "^2.29.1",
    "normalize.css": "^8.0.1",
    "pluralize": "^7.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.2.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "rxjs": "^6.6.6",
    "setimmediate": "^1.0.5",
    "styled-components": "^5.2.1",
    "ts-jest": "^26.1.3",
    "typescript": "4.6.3",
    "use-interval": "^1.2.1",
    "zod": "3.14.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^13.2.1",
    "@types/fast-text-encoding": "^1.0.1",
    "@types/fetch-mock": "^7.3.2",
    "@types/history": "^4.7.8",
    "@types/kiosk-browser": "workspace:*",
    "@types/pify": "^3.0.2",
    "@types/react-router-dom": "^5.1.5",
    "@types/setimmediate": "^1.0.2",
    "@types/testing-library__jest-dom": "^5.14.3",
    "@types/zip-stream": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@votingworks/ballot-encoder": "workspace:*",
    "@votingworks/fixtures": "workspace:*",
    "@votingworks/test-utils": "workspace:*",
    "eslint": "^7.17.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-vx": "workspace:*",
    "fetch-mock": "^9.9.0",
    "history": "^4.10.1",
    "is-ci-cli": "^2.1.2",
    "jest": "^27.3.1",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^10.2.3",
    "node-fetch": "^2.6.0",
    "prettier": "^2.6.2",
    "react-refresh": "^0.9.0",
    "sort-package-json": "^1.50.0",
    "stylelint": "^13.4.0",
    "stylelint-config-palantir": "^5.0.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "type-fest": "^0.18.0",
    "zip-stream": "^3.0.1"
  },
  "vx": {
    "isBundled": true,
    "services": [
      "../../services/scan",
      "../../services/smartcards"
    ]
  }
}

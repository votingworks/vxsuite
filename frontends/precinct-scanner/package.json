{
  "name": "@votingworks/precinct-scanner",
  "version": "0.1.0",
  "private": true,
  "files": [
    "build",
    "Makefile",
    "prodserver"
  ],
  "scripts": {
    "type-check": "tsc --build",
    "build": "tsc --build && react-scripts build",
    "build:watch": "tsc --build --watch",
    "eject": "react-scripts eject",
    "format": "prettier '**/*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)' --write",
    "lint": "pnpm type-check && eslint . && pnpm stylelint:run",
    "lint:fix": "pnpm type-check && eslint . --fix && pnpm stylelint:run:fix",
    "start": "react-scripts start",
    "stylelint:run": "stylelint 'src/**/*.{js,jsx,ts,tsx}' && stylelint 'src/**/*.css' --config .stylelintrc-css.js",
    "stylelint:run:fix": "stylelint 'src/**/*.{js,jsx,ts,tsx}' --fix && stylelint 'src/**/*.css' --config .stylelintrc-css.js --fix",
    "test": "is-ci test:coverage test:watch",
    "test:debug": "TZ=UTC react-scripts --inspect-brk test --runInBand --no-cache --env=jest-environment-jsdom-sixteen",
    "test:watch": "TZ=UTC react-scripts test --env=jest-environment-jsdom-sixteen",
    "test:coverage": "TZ=UTC react-scripts test --coverage --watchAll=false",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "stylelint",
      "eslint --quiet --fix"
    ],
    "*.css": [
      "stylelint --config .stylelintrc-css.js --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/config/*",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 91,
        "functions": 94,
        "lines": 95
      }
    }
  },
  "dependencies": {
    "@rooks/use-interval": "^4.11.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@types/jest": "^24.0.0",
    "@types/luxon": "^1.26.5",
    "@types/node": "16.11.29",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.9",
    "@votingworks/ballot-interpreter-vx": "workspace:*",
    "@votingworks/fixtures": "workspace:*",
    "@votingworks/logging": "workspace:*",
    "@votingworks/qrcode.react": "^1.0.2",
    "@votingworks/types": "workspace:*",
    "@votingworks/ui": "workspace:*",
    "@votingworks/utils": "workspace:*",
    "base64-js": "^1.3.1",
    "debug": "^4.3.1",
    "fetch-mock": "^9.11.0",
    "http-proxy-middleware": "1.0.6",
    "i18next": "^19.4.5",
    "jest-fetch-mock": "^3.0.3",
    "js-file-download": "^0.4.12",
    "js-sha256": "^0.9.0",
    "luxon": "^1.26.0",
    "mockdate": "^3.0.5",
    "normalize.css": "^8.0.1",
    "pluralize": "^8.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-i18next": "^11.7.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "rxjs": "^6.6.6",
    "styled-components": "^5.2.3",
    "typescript": "4.6.3",
    "use-interval": "^1.3.0",
    "web-vitals": "^1.0.1",
    "zod": "3.14.4"
  },
  "devDependencies": {
    "@codemod/parser": "^1.0.6",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^12.8.3",
    "@types/debug": "^4.1.5",
    "@types/kiosk-browser": "workspace:*",
    "@types/pluralize": "^0.0.29",
    "@types/testing-library__jest-dom": "^5.14.3",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@votingworks/test-utils": "workspace:*",
    "eslint": "^7.17.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-cypress": "^2.9.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-vx": "workspace:*",
    "is-ci-cli": "^2.1.2",
    "jest": "^27.3.1",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.6.2",
    "react-refresh": "^0.9.0",
    "sort-package-json": "^1.50.0",
    "stylelint": "^13.1.0",
    "stylelint-config-palantir": "^4.0.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.9.0",
    "ts-jest": "^26.5.6"
  },
  "vx": {
    "isBundled": true,
    "services": [
      "../../services/scan",
      "../../services/smartcards"
    ]
  }
}

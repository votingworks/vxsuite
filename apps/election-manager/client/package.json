{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "format": "prettier '**/*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)' --write",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,jsx,ts,tsx}' --report-unused-disable-directives --quiet && yarn stylelint:run",
    "lint:fix": "tsc --noEmit && eslint '*/**/*.{js,jsx,ts,tsx}' --fix --report-unused-disable-directives --quiet && yarn stylelint:run --fix",
    "start": "react-scripts start",
    "stylelint:run": "stylelint 'src/**/*.{js,jsx,ts,tsx}' && stylelint 'src/**/*.css' --config .stylelintrc-css.js",
    "test": "react-scripts test --env=jsdom-fourteen",
    "test:coverage": "react-scripts test --coverage --watchAll=false --env=jsdom-fourteen"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged"
    }
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "stylelint",
      "eslint --quiet --fix"
    ],
    "*.css": [
      "stylelint --config .stylelintrc-css.js --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/config/*",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 69,
        "branches": 54.89,
        "functions": 69,
        "lines": 69
      }
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^10.4.4",
    "@testing-library/user-event": "^7.1.2",
    "@types/array-unique": "^0.3.0",
    "@types/dashify": "^1.0.0",
    "@types/dompurify": "^2.0.3",
    "@types/fetch-mock": "^7.3.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/pluralize": "^0.0.29",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-modal": "^3.10.5",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.0",
    "@votingworks/ballot-encoder": "^4.0.0",
    "@votingworks/qrcode.react": "1.0.1",
    "array-unique": "^0.3.2",
    "base64-js": "^1.3.1",
    "dashify": "^2.0.0",
    "dompurify": "^2.0.12",
    "fetch-mock": "^9.10.7",
    "i18next": "^19.4.5",
    "js-file-download": "^0.4.12",
    "js-sha256": "^0.9.0",
    "moment": "^2.26.0",
    "node-fetch": "^2.6.0",
    "normalize.css": "^8.0.1",
    "pagedjs": "^0.1.40",
    "pluralize": "^8.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-i18next": "^11.6.0",
    "react-modal": "^3.11.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "react-textarea-autosize": "^8.2.0",
    "rxjs": "^6.5.5",
    "styled-components": "^5.1.0",
    "typescript": "~3.7.2",
    "use-interval": "^1.2.1",
    "zip-stream": "^3.0.1"
  },
  "devDependencies": {
    "@codemod/parser": "^1.0.6",
    "@types/base64-js": "^1.3.0",
    "@types/readable-stream": "^2.3.5",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "babel-eslint": "^10.1.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-cypress": "^2.9.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-no-array-sort-mutation": "./test/eslint-rules/eslint-plugin-no-array-sort-mutation",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^4.0.5",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.13.1",
    "sort-package-json": "^1.44.0",
    "stylelint": "^13.1.0",
    "stylelint-config-palantir": "^4.0.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.9.0"
  }
}

{
  "name": "bsd",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "script/react-scripts build",
    "eject": "script/react-scripts eject",
    "format": "prettier '**/*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)' --write",
    "lint": "tsc --build && eslint '*/**/*.{js,jsx,ts,tsx}' --quiet && pnpm stylelint:run",
    "lint:fix": "tsc --build && eslint '*/**/*.{js,jsx,ts,tsx}' --quiet --fix && pnpm stylelint:run:fix",
    "start": "script/react-scripts start",
    "stylelint:run": "stylelint 'src/**/*.{js,jsx,ts,tsx}' && stylelint 'src/**/*.css' --config .stylelintrc-css.js",
    "stylelint:run:fix": "stylelint 'src/**/*.{js,jsx,ts,tsx}' --fix && stylelint 'src/**/*.css' --config .stylelintrc-css.js --fix",
    "test": "TZ=UTC script/react-scripts test --env=jest-environment-jsdom-sixteen",
    "test:coverage": "TZ=UTC pnpm test -- --coverage --watchAll=false",
    "test:debug": "TZ=UTC script/react-scripts --inspect-brk test --runInBand --no-cache"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "stylelint",
      "eslint --quiet --fix"
    ],
    "*.css": [
      "stylelint --config .stylelintrc-css.js --fix"
    ],
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 67,
        "branches": 59,
        "functions": 64,
        "lines": 67
      }
    }
  },
  "dependencies": {
    "@types/jest": "24.0.11",
    "@types/node": "12.19.3",
    "@types/pluralize": "^0.0.29",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-modal": "^3.10.6",
    "@types/styled-components": "^5.0.0",
    "@votingworks/hmpb-interpreter": "workspace:*",
    "@votingworks/ui": "workspace:*",
    "fast-text-encoding": "^1.0.2",
    "http-proxy-middleware": "^1.0.0",
    "js-file-download": "^0.4.6",
    "moment": "^2.29.1",
    "normalize.css": "^8.0.1",
    "pluralize": "^7.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.2.1",
    "react-modal": "^3.11.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "rxjs": "^6.6.6",
    "styled-components": "^4.4.0",
    "ts-jest": "^26.1.3",
    "typescript": "^4.2.0",
    "use-interval": "^1.2.1",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.3",
    "@types/fast-text-encoding": "^1.0.1",
    "@types/fetch-mock": "^7.3.2",
    "@types/history": "^4.7.8",
    "@types/kiosk-browser": "workspace:*",
    "@types/pify": "^3.0.2",
    "@types/react-router-dom": "^5.1.5",
    "@types/yauzl": "^2.9.1",
    "@types/zip-stream": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "@votingworks/ballot-encoder": "workspace:*",
    "@votingworks/fixtures": "workspace:*",
    "@votingworks/test-utils": "workspace:*",
    "@votingworks/types": "workspace:*",
    "eslint": "^7.17.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-no-array-sort-mutation": "workspace:*",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fetch-mock": "^9.9.0",
    "history": "^4.10.1",
    "husky": "^4.2.5",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^10.2.3",
    "node-fetch": "^2.6.0",
    "prettier": "^2.1.2",
    "react-refresh": "^0.9.0",
    "stylelint": "^13.4.0",
    "stylelint-config-palantir": "^5.0.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "type-fest": "^0.18.0",
    "zip-stream": "^3.0.1"
  }
}

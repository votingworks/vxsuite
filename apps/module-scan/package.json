{
  "name": "module-scan",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "format": "prettier '**/*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)' --write",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,jsx,ts,tsx}' --quiet",
    "start": "ts-node --files ./src/index.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk $(which jest) --runInBand --no-cache",
    "test:watch": "jest --watch",
    "watch": "tsc -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged"
    }
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "eslint --quiet --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@types/sharp": "^0.25.1",
    "@votingworks/ballot-encoder": "^2.0.1",
    "@votingworks/hmpb-interpreter": "^4.0.1",
    "@votingworks/qrdetect": "^1.0.1",
    "busboy": "^0.3.1",
    "canvas": "^2.6.1",
    "chokidar": "^3.4.0",
    "debug": "^4.1.1",
    "express": "^4.16.4",
    "fs-extra": "^8.0.1",
    "memory-streams": "^0.1.3",
    "multer": "^1.4.2",
    "node-quirc": "^2.1.0",
    "pdfjs-dist": "^2.3.200",
    "sharp": "^0.25.4",
    "sqlite3": "^4.0.8",
    "tmp": "^0.2.1",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@types/busboy": "^0.2.3",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.16.1",
    "@types/fs-extra": "^8.1.0",
    "@types/jest": "^25.2.1",
    "@types/multer": "^1.4.3",
    "@types/node": "^12.0.0",
    "@types/pdfjs-dist": "^2.1.3",
    "@types/sqlite3": "^3.1.6",
    "@types/supertest": "^2.0.9",
    "@types/tmp": "^0.2.0",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.6",
    "pngjs": "^5.0.0",
    "prettier": "^2.0.5",
    "sort-package-json": "^1.42.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3"
  },
  "engines": {
    "node": ">= 12"
  }
}

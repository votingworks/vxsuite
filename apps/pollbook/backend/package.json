    "express": "4.18.2",
    "fs-extra": "11.1.1",
    "jsbarcode": "^3.11.6",
    "node-fetch": "^2.6.0",
    "react": "18.3.1",
    "styled-components": "^5.3.11",
    "uuid": "9.0.1",
    "zod": "3.23.5"

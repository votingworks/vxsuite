    "@types/supertest": "^2.0.10",
    "@types/tmp": "0.2.4",
    "@types/uuid": "9.0.5",
    "esbuild": "0.21.2",
    "esbuild-runner": "2.2.2",
    "eslint-plugin-vx": "workspace:*",
    "fast-check": "2.23.2",
    "is-ci-cli": "2.2.0",
    "jest": "^29.6.2",
    "jest-image-snapshot": "^6.4.0",

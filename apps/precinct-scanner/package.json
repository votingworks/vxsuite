{
  "name": "@votingworks/precinct-scanner",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "script/react-scripts build",
    "eject": "script/react-scripts eject",
    "format": "prettier '**/*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)' --write",
    "lint": "tsc --build && eslint '*/**/*.{js,jsx,ts,tsx}' --quiet && pnpm stylelint:run",
    "lint:fix": "tsc --build && eslint '*/**/*.{js,jsx,ts,tsx}' --fix --quiet && pnpm stylelint:run:fix",
    "start": "script/react-scripts start",
    "stylelint:run": "stylelint 'src/**/*.{js,jsx,ts,tsx}' && stylelint 'src/**/*.css' --config .stylelintrc-css.js",
    "stylelint:run:fix": "stylelint 'src/**/*.{js,jsx,ts,tsx}' --fix && stylelint 'src/**/*.css' --config .stylelintrc-css.js --fix",
    "test": "TZ=PST script/react-scripts test --env=jest-environment-jsdom-sixteen",
    "test:coverage": "TZ=PST pnpm test -- --coverage --watchAll=false"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged"
    }
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "stylelint",
      "eslint --quiet --fix"
    ],
    "*.css": [
      "stylelint --config .stylelintrc-css.js --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/config/*",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "dependencies": {
    "@rooks/use-interval": "^4.11.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.20.11",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-modal": "^3.10.5",
    "@types/react-router-dom": "^5.1.5",
    "@votingworks/hmpb-interpreter": "workspace:*",
    "@votingworks/ui": "workspace:*",
    "fast-text-encoding": "^1.0.2",
    "fetch-mock": "^9.11.0",
    "http-proxy-middleware": "^1.0.0",
    "i18next": "^19.4.5",
    "jest-fetch-mock": "^3.0.3",
    "js-sha256": "^0.9.0",
    "normalize.css": "^8.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-i18next": "^11.7.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "typescript": "^4.2.0",
    "web-vitals": "^1.0.1",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@codemod/parser": "^1.0.6",
    "@types/fast-text-encoding": "^1.0.1",
    "@types/kiosk-browser": "workspace:*",
    "@types/yauzl": "^2.9.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "@votingworks/fixtures": "workspace:*",
    "@votingworks/test-utils": "workspace:*",
    "@votingworks/types": "workspace:*",
    "eslint": "^7.17.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-cypress": "^2.9.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-no-array-sort-mutation": "workspace:*",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^4.0.5",
    "husky": "^4.2.1",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "lint-staged": "^10.0.7",
    "prettier": "^2.0.5",
    "react-refresh": "^0.9.0",
    "sort-package-json": "^1.44.0",
    "stylelint": "^13.1.0",
    "stylelint-config-palantir": "^4.0.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.9.0"
  }
}

{
  "name": "@votingworks/design-backend",
  "version": "0.1.0",
  "private": true,
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build",
    "bin",
    "Makefile",
    "schema.sql"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rm -rf build tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo",
    "format": "prettier '**/*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)' --write",
    "generate-fixtures": "./bin/generate-fixtures",
    "lint": "pnpm type-check && eslint .",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "pre-commit": "lint-staged",
    "start": "node ./build/index.js",
    "test": "is-ci test:ci test:watch",
    "test:ci": "jest --coverage --reporters=default --reporters=jest-junit --maxWorkers=6",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk $(which jest) --runInBand --no-cache",
    "test:watch": "jest --watch",
    "type-check": "tsc --build"
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "eslint --quiet --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@votingworks/basics": "workspace:*",
    "@votingworks/db": "workspace:*",
    "@votingworks/design-shared": "workspace:*",
    "@votingworks/grout": "workspace:*",
    "@votingworks/types": "workspace:*",
    "@votingworks/utils": "workspace:*",
    "better-sqlite3": "^7.5.0",
    "debug": "^4.3.1",
    "deep-eql": "^4.1.3",
    "dotenv": "^16.0.2",
    "dotenv-expand": "^9.0.0",
    "express": "^4.18.0",
    "fs-extra": "^9.0.1",
    "jszip": "^3.9.1",
    "pdfkit": "^0.13.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "svg-to-pdfkit": "^0.1.8",
    "uuid": "^8.3.2",
    "zod": "3.14.4"
  },
  "devDependencies": {
    "@jest/types": "^29.0.0",
    "@types/better-sqlite3": "^7.4.3",
    "@types/debug": "^4.1.5",
    "@types/deep-eql": "^4.0.0",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^27.0.3",
    "@types/node": "16.18.23",
    "@types/pdfkit": "^0.12.9",
    "@types/react": "17.0.39",
    "@types/react-dom": "^17.0.0",
    "@types/svg-to-pdfkit": "^0.1.0",
    "@types/tmp": "^0.2.3",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "5.37.0",
    "@typescript-eslint/parser": "5.37.0",
    "@votingworks/ballot-interpreter": "workspace:*",
    "@votingworks/fixtures": "workspace:*",
    "@votingworks/image-utils": "workspace:*",
    "esbuild": "^0.14.29",
    "esbuild-runner": "^2.2.1",
    "eslint": "8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-vx": "workspace:*",
    "is-ci-cli": "^2.1.2",
    "jest": "^29.4.1",
    "jest-junit": "^15.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.20",
    "sort-package-json": "^1.50.0",
    "tmp": "^0.2.1",
    "ts-jest": "29.0.5",
    "typescript": "4.6.3"
  },
  "engines": {
    "node": ">= 12"
  },
  "packageManager": "pnpm@8.1.0"
}

#!/usr/bin/env node

require('esbuild-runner/register');

require('../src/cli/retry-scan/main')
  .main(process.argv.slice(2), {
    stdout: process.stdout,
    stderr: process.stderr,
  })
  .catch((error) => {
    process.stderr.write(`CRASH: ${error.stack}\n`);
    return 1;
  })
  .then((code) => {
    process.exitCode = code;
  });

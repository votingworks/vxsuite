{
  "extends": "../../../tsconfig.shared.json",
  "compilerOptions": {
    "types": ["cypress"],
    "isolatedModules": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "node16",
    "moduleResolution": "node16",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": false
  },
  "include": ["**/*.ts"],
  "exclude": [],
  "references": [
    { "path": "../../../libs/auth/tsconfig.build.json" },
    { "path": "../../../libs/eslint-plugin-vx/tsconfig.build.json" },
    { "path": "../../../libs/fixtures/tsconfig.build.json" },
    { "path": "../../../libs/grout/tsconfig.build.json" },
    { "path": "../../../libs/test-utils/tsconfig.build.json" },
    { "path": "../../../libs/types/tsconfig.build.json" }
  ],
  // Old "moduleResolution": "Node" option required for Cypress
  // https://github.com/cypress-io/cypress/issues/26308#issuecomment-1663592648
  //
  // TODO: Remove when issue is resolved https://github.com/cypress-io/cypress/issues/27448
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node"
    }
  }
}

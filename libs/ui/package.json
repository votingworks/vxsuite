  "scripts": {
    "type-check": "tsc --build",
    "build": "pnpm --filter $npm_package_name... build:self",
    "build:self": "tsc --build tsconfig.build.json",
    "build:app-strings-catalog": "i18next && ./scripts/finalize-app-strings-catalog",
    "check:app-strings-catalog": "./scripts/check-app-strings-catalog",
    "clean": "pnpm --filter $npm_package_name... clean:self",
    "clean:self": "rm -rf build && tsc --build --clean tsconfig.build.json",
    "lint": "pnpm type-check && eslint . && pnpm stylelint:run && pnpm check:app-strings-catalog",
    "lint:fix": "pnpm type-check && eslint . --fix && pnpm stylelint:run:fix",
    "start": "storybook dev -p 6060",
    "stylelint:run": "stylelint 'src/**/*.{js,jsx,ts,tsx}'",
    "stylelint:run:fix": "stylelint 'src/**/*.{js,jsx,ts,tsx}' --fix",
    "test": "is-ci test:ci test:watch",
    "test:coverage": "TZ=America/Anchorage jest --coverage",
    "test:ci": "TZ=America/Anchorage jest --coverage --reporters=default --reporters=jest-junit --maxWorkers=6",
    "test:watch": "TZ=America/Anchorage jest --watch",
    "pre-commit": "lint-staged"
  },

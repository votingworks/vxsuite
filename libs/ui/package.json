{
  "name": "@votingworks/ui",
  "version": "1.0.0",
  "private": true,
  "description": "Generic UI components for VotingWorks UIs",
  "license": "GPL-3.0",
  "author": "VotingWorks <eng@voting.works>",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "type-check": "tsc --build",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "lint": "pnpm type-check && eslint . && pnpm stylelint:run",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "stylelint:run": "stylelint 'src/**/*.{js,jsx,ts,tsx}'",
    "test": "TZ=UTC jest",
    "test:coverage": "TZ=UTC jest --coverage",
    "test:watch": "TZ=UTC jest --watch",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "stylelint",
      "eslint --quiet --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@types/react-router-dom": "^5.1.7",
    "@votingworks/types": "workspace:*",
    "@votingworks/utils": "workspace:*",
    "debug": "^4.3.2",
    "luxon": "1.26.0",
    "pluralize": "^8.0.0",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "rxjs": "6.6.6",
    "styled-components": "^5.2.3",
    "use-interval": "^1.3.0"
  },
  "devDependencies": {
    "@codemod/parser": "^1.0.6",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.2.1",
    "@types/debug": "^4.1.7",
    "@types/jest": "^26.0.23",
    "@types/kiosk-browser": "workspace:*",
    "@types/luxon": "^1.26.5",
    "@types/node": "^15.0.0",
    "@types/pluralize": "^0.0.29",
    "@types/react": "^17.0.4",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@votingworks/fixtures": "workspace:*",
    "@votingworks/test-utils": "workspace:*",
    "eslint": "^7.17.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-cypress": "^2.9.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^4.0.5",
    "eslint-plugin-vx": "workspace:*",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^11.0.0",
    "mockdate": "^3.0.5",
    "prettier": "^2.1.1",
    "react": "^17.0.1",
    "sort-package-json": "^1.50.0",
    "stylelint": "^13.1.0",
    "stylelint-config-palantir": "^4.0.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.9.0",
    "ts-jest": "^26.5.5",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "react": "^17.0.1"
  }
}

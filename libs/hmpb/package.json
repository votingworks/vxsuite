{
  "name": "@votingworks/hmpb",
  "version": "0.1.0",
  "private": true,
  "license": "GPL-3.0-only",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build",
    "bin"
  ],
  "scripts": {
    "build": "pnpm --filter $npm_package_name... build:self",
    "build:self": "tsc --build tsconfig.build.json",
    "clean": "pnpm --filter $npm_package_name... clean:self",
    "clean:self": "rm -rf build && tsc --build --clean tsconfig.build.json",
    "format": "prettier '**/*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)' --write",
    "generate-fixtures": "DEBUG=hmpb:ballot_fixtures ./bin/generate-fixtures",
    "lint": "pnpm type-check && eslint .",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "pre-commit": "lint-staged",
    "start": "vite -c vite.config.ts src/preview",
    "test": "is-ci test:ci test:watch",
    "test:ci": "jest --coverage --reporters=default --reporters=jest-junit --maxWorkers=6",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk $(which jest) --runInBand --no-cache",
    "test:watch": "jest --watch",
    "type-check": "tsc --build"
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "eslint --quiet --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@votingworks/ballot-encoder": "workspace:*",
    "@votingworks/basics": "workspace:*",
    "@votingworks/fixtures": "workspace:*",
    "@votingworks/image-utils": "workspace:*",
    "@votingworks/types": "workspace:*",
    "@votingworks/ui": "workspace:*",
    "@votingworks/utils": "workspace:*",
    "buffer": "^6.0.3",
    "debug": "4.3.4",
    "js-sha256": "^0.9.0",
    "path": "^0.12.7",
    "pdf-lib": "^1.17.1",
    "playwright": "^1.40.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "styled-components": "^5.3.11"
  },
  "devDependencies": {
    "@jest/types": "^29.6.1",
    "@types/debug": "4.1.8",
    "@types/jest": "^29.5.3",
    "@types/node": "20.16.0",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/styled-components": "^5.1.26",
    "@types/tmp": "0.2.4",
    "@votingworks/fs": "workspace:*",
    "@votingworks/monorepo-utils": "workspace:*",
    "esbuild": "0.21.2",
    "esbuild-runner": "2.2.2",
    "eslint-plugin-vx": "workspace:*",
    "is-ci-cli": "2.2.0",
    "jest": "^29.6.2",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "11.0.0",
    "sort-package-json": "^1.50.0",
    "tmp": "^0.2.1",
    "ts-jest": "29.1.1",
    "vite": "4.5.0"
  },
  "engines": {
    "node": ">= 12"
  },
  "packageManager": "pnpm@8.15.5"
}

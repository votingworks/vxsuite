{
  "name": "@votingworks/ballot-encoder",
  "version": "5.2.1",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "type-check": "tsc --build",
    "type-check:watch": "tsc --build --watch",
    "build": "tsc --build tsconfig.build.json",
    "build:watch": "tsc --build --watch tsconfig.build.json",
    "clean": "rm -rf build tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo",
    "lint": "pnpm type-check && eslint .",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "test": "is-ci test:ci test:watch",
    "test:ci": "jest --ci --coverage",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk $(which jest) --runInBand --no-cache",
    "test:watch": "jest --watch",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.(js|ts)": [
      "eslint --quiet --fix"
    ],
    "*.md": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@antongolub/iso8601": "^1.2.1",
    "@votingworks/types": "workspace:*",
    "@votingworks/utils": "workspace:*",
    "js-sha256": "^0.9.0",
    "zod": "3.2.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "12.19.16",
    "@types/text-encoding": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@votingworks/fixtures": "workspace:*",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vx": "workspace:*",
    "fast-check": "^2.18.0",
    "is-ci-cli": "^2.2.0",
    "jest": "^27.3.1",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "sort-package-json": "^1.50.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">= 12"
  },
  "publishConfig": {
    "access": "public"
  }
}
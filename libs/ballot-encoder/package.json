{
  "name": "@votingworks/ballot-encoder",
  "version": "5.2.1",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "type-check": "tsc --build",
    "build": "tsc --build tsconfig.build.json",
    "clean": "rm -rf build tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo",
    "lint": "pnpm type-check && eslint .",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "test": "is-ci test:ci test:watch",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit --maxWorkers=6",
    "test:coverage": "bun test --coverage",
    "test:debug": "node --inspect-brk $(which jest) --runInBand --no-cache",
    "test:watch": "bun test --watch",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.(js|ts)": [
      "eslint --quiet --fix"
    ],
    "*.md": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@antongolub/iso8601": "^1.2.1",
    "@votingworks/basics": "workspace:*",
    "@votingworks/types": "workspace:*",
    "@votingworks/utils": "workspace:*",
    "js-sha256": "^0.9.0",
    "zod": "3.14.4"
  },
  "devDependencies": {
    "@types/node": "16.18.23",
    "@types/text-encoding": "^0.0.35",
    "@votingworks/fixtures": "workspace:*",
    "eslint-plugin-vx": "workspace:*",
    "fast-check": "2.23.2",
    "is-ci-cli": "2.2.0",
    "lint-staged": "11.0.0",
    "sort-package-json": "^1.50.0"
  },
  "engines": {
    "node": ">= 12"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@8.1.0"
}

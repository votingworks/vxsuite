{
  "name": "@votingworks/ballot-encoder",
  "version": "1.3.2",
  "files": [
    "src/**/*.{js,d.ts,d.ts.map,json}"
  ],
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "lint": "eslint 'src/**/*.{ts,js}' --report-unused-disable-directives",
    "prepare": "in-publish && tsc || not-in-publish",
    "test": "jest",
    "test:ci": "jest --ci --collectCoverage",
    "test:coverage": "jest --collectCoverage",
    "test:debug": "node --inspect-brk $(which jest) --runInBand --no-cache",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|ts)": [
      "eslint --quiet --fix",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/random-js": "^1.0.31",
    "@types/text-encoding": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.5",
    "in-publish": "^2.0.0",
    "jest": "^24.9.0",
    "jest-watch-typeahead": "^0.4.0",
    "lint-staged": "^9.3.0",
    "prettier": "^2.0.5",
    "random-js": "^2.1.0",
    "sort-package-json": "^1.22.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.9.5"
  },
  "engines": {
    "node": ">= 12"
  },
  "publishConfig": {
    "access": "public"
  }
}

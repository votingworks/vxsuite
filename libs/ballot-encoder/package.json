{
  "name": "@votingworks/ballot-encoder",
  "version": "5.2.1",
  "main": "lib/src/index.js",
  "types": "lib/src/index.d.ts",
  "files": [
    "lib/**/*.{js,d.ts,d.ts.map,json}"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "lint": "tsc --build && eslint src",
    "prepack": "tsc --build && jest --coverage",
    "publish:npm": "rm -rf lib && pnpm test:coverage && tsc && npm publish --access public",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk $(which jest) --runInBand --no-cache",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|ts)": [
      "eslint --quiet --fix",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "dependencies": {
    "@antongolub/iso8601": "^1.2.1",
    "js-sha256": "^0.9.0",
    "zod": "1.7.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.20",
    "@types/text-encoding": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "@votingworks/fixtures": "workspace:*",
    "@votingworks/types": "workspace:*",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-no-array-sort-mutation": "workspace:*",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.2",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "random-js": "^2.1.0",
    "sort-package-json": "^1.46.1",
    "ts-jest": "^26.4.3",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">= 12"
  },
  "publishConfig": {
    "access": "public"
  }
}

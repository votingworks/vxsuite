{
  "name": "@votingworks/basics",
  "version": "1.0.0",
  "private": true,
  "description": "An extended TS standard library of generic utility functions and types.",
  "license": "GPL-3.0",
  "author": "VotingWorks Eng <eng@voting.works>",
  "main": "build/index.js",
  "types": "build/index.d.js",
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rm -rf build *.tsbuildinfo",
    "lint": "pnpm type-check && eslint .",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "pre-commit": "lint-staged",
    "test": "is-ci test:ci test:watch",
    "test:ci": "pnpm build && pnpm test:coverage --reporters=default --reporters=jest-junit --maxWorkers=6",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "type-check": "tsc --build"
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "eslint --quiet --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "deep-eql": "4.1.3",
    "util": "^0.12.4"
  },
  "devDependencies": {
    "@types/deep-eql": "^4.0.2",
    "@types/jest": "^29.5.3",
    "@types/node": "16.18.23",
    "eslint-plugin-vx": "workspace:*",
    "fast-check": "2.23.2",
    "is-ci-cli": "2.2.0",
    "jest": "^29.6.2",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "11.0.0",
    "sort-package-json": "^1.50.0",
    "ts-jest": "29.1.1"
  },
  "packageManager": "pnpm@8.1.0"
}

{
  "name": "@votingworks/backend",
  "version": "1.0.0",
  "private": true,
  "description": "Data manipulation utilities for NodeJS",
  "license": "GPL-3.0",
  "author": "VotingWorks Eng <eng@voting.works>",
  "main": "build/index.js",
  "types": "build/index.d.js",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rm -rf build tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo",
    "lint": "pnpm type-check && eslint .",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "pre-commit": "lint-staged",
    "test": "is-ci test:ci test:watch",
    "test:ci": "TZ=UTC pnpm build && pnpm test:coverage --reporters=default --reporters=jest-junit --maxWorkers=6",
    "test:coverage": "TZ=UTC jest --coverage",
    "test:watch": "TZ=UTC jest --watch",
    "type-check": "tsc --build"
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "eslint --quiet --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@votingworks/auth": "workspace:*",
    "@votingworks/basics": "workspace:*",
    "@votingworks/fixtures": "workspace:*",
    "@votingworks/logging": "workspace:*",
    "@votingworks/types": "workspace:*",
    "@votingworks/usb-drive": "workspace:*",
    "@votingworks/utils": "workspace:*",
    "buffer": "^6.0.3",
    "debug": "^4.3.2",
    "fs-extra": "^11.1.1",
    "js-sha256": "^0.9.0",
    "jszip": "^3.9.1",
    "micromatch": "^4.0.5",
    "readline": "^1.3.0",
    "stream-chain": "^2.2.5",
    "stream-chopper": "^3.0.1",
    "stream-json": "^1.7.5",
    "tmp": "^0.2.1",
    "zod": "3.14.4"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.3",
    "@types/micromatch": "^4.0.2",
    "@types/node": "16.18.23",
    "@types/stream-chain": "^2.0.1",
    "@types/stream-chopper": "workspace:*",
    "@types/stream-json": "^1.7.3",
    "@types/tmp": "^0.2.3",
    "@votingworks/test-utils": "workspace:*",
    "eslint-plugin-vx": "workspace:*",
    "fast-check": "2.23.2",
    "is-ci-cli": "^2.2.0",
    "jest": "^29.6.2",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^11.0.0",
    "memory-streams": "^0.1.3",
    "sort-package-json": "^1.50.0",
    "ts-jest": "^29.1.1"
  },
  "packageManager": "pnpm@8.1.0"
}

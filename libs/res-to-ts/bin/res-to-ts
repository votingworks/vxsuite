#!/usr/bin/env node

require('esbuild-runner').install({
  type: 'transform',
});

require('../src/cli')
  .main(process.argv, {
    stdin: process.stdin,
    stdout: process.stdout,
    stderr: process.stderr,
  })
  .then((code) => {
    process.exitCode = code;
  })
  .catch((err) => {
    console.error(err.stack);
    process.exit(1);
  });

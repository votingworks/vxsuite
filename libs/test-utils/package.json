{
  "name": "@votingworks/test-utils",
  "version": "1.0.0",
  "private": true,
  "description": "Test utilities for the monorepo.",
  "license": "GPL-3.0-only",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "type-check": "tsc --build",
    "build": "pnpm --filter $npm_package_name... build:self",
    "build:self": "tsc --build tsconfig.build.json",
    "clean": "pnpm --filter $npm_package_name... clean:self",
    "clean:self": "rm -rf build && tsc --build --clean tsconfig.build.json",
    "lint": "pnpm type-check && eslint .",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "test": "is-ci test:ci test:watch",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest run --coverage",
    "test:watch": "vitest",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@testing-library/react": "^15.0.7",
    "@votingworks/basics": "workspace:*",
    "@votingworks/types": "workspace:*",
    "buffer": "^6.0.3",
    "chalk": "4.1.2",
    "fast-check": "2.23.2",
    "jest-diff": "^29.6.2",
    "js-sha256": "^0.9.0",
    "jszip": "^3.9.1",
    "luxon": "^3.0.0",
    "react": "18.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/kiosk-browser": "workspace:*",
    "@types/luxon": "^3.0.0",
    "@types/node": "20.16.0",
    "@types/react": "18.3.3",
    "@types/zip-stream": "workspace:*",
    "@vitest/coverage-istanbul": "^2.1.8",
    "eslint-plugin-vx": "workspace:*",
    "is-ci-cli": "2.2.0",
    "lint-staged": "11.0.0",
    "sort-package-json": "^1.50.0",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@8.15.5"
}

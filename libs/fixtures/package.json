  "license": "GPL-3.0",
  "author": "VotingWorks",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "type-check": "tsc --build",
    "build": "tsc --build tsconfig.build.json",
    "build:resources": "bash build_resources.sh",
    "clean": "rm -rf build tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo",
    "lint": "pnpm type-check && eslint .",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "test": "is-ci test:ci test:watch",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "test:ci": "bun test --coverage --ci --reporters=default --reporters=jest-junit --maxWorkers=6 && pnpm build:resources --check",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "eslint --quiet --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.51",
    "@votingworks/types": "workspace:*",
    "buffer": "^6.0.3",
    "csv-writer": "^1.6.0",
    "js-sha256": "^0.9.0"
  },
  "devDependencies": {
    "@types/node": "16.18.23",
    "@votingworks/res-to-ts": "workspace:*",
    "eslint-plugin-vx": "workspace:*",
    "is-ci-cli": "2.2.0",
    "lint-staged": "11.0.0",
    "sort-package-json": "^1.50.0"
  },
  "packageManager": "pnpm@8.1.0"
}

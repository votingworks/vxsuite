{
  "name": "@votingworks/custom-scanner",
  "version": "1.0.0",
  "description": "Interface for the Custom A4 duplex scanner",
  "keywords": [],
  "license": "GPL-3.0-only",
  "author": "",
  "main": "build/index.js",
  "scripts": {
    "analyze-packets": "cd tools/analyze-packets && vite",
    "build": "is-ci build:ci build:dev",
    "build:ci": "pnpm --filter $npm_package_name... --sequential build:self",
    "build:dev": "pnpm --filter $npm_package_name... build:self",
    "build:self": "tsc --build tsconfig.build.json",
    "clean": "pnpm --filter $npm_package_name... clean:self",
    "clean:self": "rm -rf build && tsc --build --clean tsconfig.build.json",
    "lint": "pnpm type-check && eslint .",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "pre-commit": "lint-staged",
    "test": "is-ci test:ci test:watch",
    "test:ci": "pnpm build && pnpm test:coverage --run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest",
    "type-check": "tsc --build"
  },
  "dependencies": {
    "@votingworks/basics": "workspace:*",
    "@votingworks/message-coder": "workspace:*",
    "@votingworks/types": "workspace:*",
    "@votingworks/utils": "workspace:*",
    "buffer": "^6.0.3",
    "chalk": "4.1.2",
    "debug": "4.3.4",
    "usb": "2.15.0"
  },
  "devDependencies": {
    "@types/debug": "4.1.8",
    "@types/node": "20.17.31",
    "@types/w3c-web-usb": "^1.0.6",
    "@vitest/coverage-istanbul": "^2.1.8",
    "@votingworks/test-utils": "workspace:*",
    "esbuild": "0.21.2",
    "esbuild-runner": "2.2.2",
    "eslint-plugin-vx": "workspace:*",
    "fast-check": "2.23.2",
    "is-ci-cli": "2.2.0",
    "vite": "4.5.2",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@8.15.5"
}

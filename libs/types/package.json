{
  "name": "@votingworks/types",
  "version": "1.0.0",
  "private": true,
  "description": "Schema definitions for shared VotingWorks types.",
  "license": "GPL-3.0",
  "author": "VotingWorks Eng <eng@voting.works>",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "type-check": "tsc --build",
    "build": "tsc --build tsconfig.build.json",
    "clean": "rm -rf build tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo",
    "lint": "pnpm type-check && eslint .",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "test": "is-ci test:ci test:watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --reporters=default --reporters=jest-junit --maxWorkers=7",
    "test:watch": "jest --watch",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "eslint --quiet --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@antongolub/iso8601": "^1.2.1",
    "@votingworks/basics": "workspace:*",
    "js-sha256": "^0.9.0",
    "luxon": "^2.4.0",
    "util": "^0.12.4",
    "zod": "3.14.4"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/kiosk-browser": "workspace:*",
    "@types/luxon": "^2.3.2",
    "@types/node": "16.11.29",
    "@types/react": "17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vx": "workspace:*",
    "fast-check": "^2.19.0",
    "fast-glob": "^3.2.11",
    "is-ci-cli": "^2.2.0",
    "jest": "^29.4.2",
    "jest-junit": "^15.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^11.0.0",
    "prettier": "^2.6.2",
    "sort-package-json": "^1.50.0",
    "ts-jest": "^29.0.5",
    "typescript": "4.6.3"
  },
  "packageManager": "pnpm@7.24.3"
}

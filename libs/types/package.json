{
  "name": "@votingworks/types",
  "version": "1.0.0",
  "private": true,
  "description": "Schema definitions for shared VotingWorks types.",
  "license": "GPL-3.0",
  "author": "VotingWorks Eng <eng@voting.works>",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "api",
    "build"
  ],
  "scripts": {
    "type-check": "tsc --build",
    "type-check:watch": "tsc --build --watch",
    "build": "tsc --build tsconfig.build.json",
    "build:watch": "tsc --build --watch tsconfig.build.json",
    "clean": "rm -rf build tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo",
    "lint": "pnpm type-check && eslint .",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "test": "is-ci test:coverage test:watch",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "eslint --quiet --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@antongolub/iso8601": "^1.2.1",
    "js-sha256": "^0.9.0",
    "zod": "3.2.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "16.11.29",
    "@types/react": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@votingworks/fixtures": "workspace:*",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vx": "workspace:*",
    "fast-check": "^2.19.0",
    "is-ci-cli": "^2.2.0",
    "jest": "^27.3.1",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^11.0.0",
    "prettier": "^2.6.2",
    "sort-package-json": "^1.50.0",
    "ts-jest": "^27.0.7",
    "typescript": "4.6.3"
  }
}

{
  "name": "@votingworks/printing",
  "version": "1.0.0",
  "private": true,
  "description": "Backend rendering, printing, and printer management",
  "license": "GPL-3.0",
  "author": "VotingWorks Eng <eng@voting.works>",
  "main": "build/index.js",
  "types": "build/index.d.js",
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rm -rf build *.tsbuildinfo",
    "lint": "pnpm type-check && eslint .",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "postinstall": "test -f /usr/bin/chromium || playwright install --with-deps chromium",
    "pre-commit": "lint-staged",
    "test": "is-ci test:ci test:watch",
    "test:ci": "pnpm build && TZ=America/Anchorage pnpm test:coverage --reporters=default --reporters=jest-junit --maxWorkers=6",
    "test:coverage": "TZ=America/Anchorage jest --coverage",
    "test:watch": "TZ=America/Anchorage jest --watch",
    "type-check": "tsc --build"
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "eslint --quiet --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@votingworks/basics": "workspace:*",
    "@votingworks/fixtures": "workspace:*",
    "@votingworks/fs": "workspace:*",
    "@votingworks/logging": "workspace:*",
    "@votingworks/test-utils": "workspace:*",
    "@votingworks/types": "workspace:*",
    "@votingworks/ui": "workspace:*",
    "@votingworks/utils": "workspace:*",
    "debug": "4.3.4",
    "playwright": "^1.40.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "styled-components": "^5.3.11",
    "tmp": "^0.2.1",
    "tmp-promise": "^3.0.3",
    "zod": "3.23.5"
  },
  "devDependencies": {
    "@types/debug": "4.1.8",
    "@types/jest": "^29.5.3",
    "@types/jest-image-snapshot": "^6.4.0",
    "@types/node": "16.18.23",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/styled-components": "^5.1.26",
    "@types/tmp": "0.2.4",
    "@votingworks/image-utils": "workspace:*",
    "esbuild": "0.21.2",
    "esbuild-runner": "2.2.2",
    "eslint-plugin-vx": "workspace:*",
    "is-ci-cli": "2.2.0",
    "jest": "^29.6.2",
    "jest-image-snapshot": "^6.4.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "11.0.0",
    "sort-package-json": "^1.50.0",
    "ts-jest": "29.1.1"
  },
  "packageManager": "pnpm@8.1.0"
}

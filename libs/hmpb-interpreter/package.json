{
  "name": "@votingworks/hmpb-interpreter",
  "version": "5.2.16",
  "description": "Interprets hand-marked paper ballots.",
  "repository": "https://github.com/votingworks/hmpb-interpreter",
  "license": "GPL-3.0",
  "author": "VotingWorks Eng <eng@voting.works>",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "bin": {
    "hmpb": "bin/hmpb-interpreter.js",
    "hmpb-interpreter": "bin/hmpb-interpreter.js"
  },
  "files": [
    "build",
    "!*.test.{js,d.ts}",
    "!build/test"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "build:watch": "tsc --build --watch tsconfig.build.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "is-ci test:ci test:watch",
    "test:ci": "pnpm build && REGRESSION_TESTS=1 jest --coverage",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --build --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "eslint --quiet --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@votingworks/ballot-encoder": "workspace:*",
    "canvas": "^2.6.1",
    "chalk": "^4.1.0",
    "debug": "^4.2.0",
    "jsfeat": "^0.0.8",
    "jsqr": "^1.3.1",
    "node-quirc": "^2.2.1",
    "table": "^6.0.3",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/benchmark": "^1.0.33",
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.15",
    "@types/jsfeat": "0.0.1-development",
    "@types/memorystream": "^0.3.0",
    "@types/node": "12.19.3",
    "@types/node-quirc": "0.0.1-development",
    "@types/table": "^6.0.0",
    "@types/tmp": "^0.2.0",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "@votingworks/types": "workspace:*",
    "benchmark": "^2.1.4",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-vx": "workspace:*",
    "husky": "^4.3.0",
    "is-ci-cli": "^2.1.2",
    "jest": "^26.6.0",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^10.4.2",
    "memorystream": "^0.3.1",
    "prettier": "^2.1.2",
    "sort-package-json": "^1.46.1",
    "tmp": "^0.2.1",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.2.0"
  }
}
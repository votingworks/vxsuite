{
  "name": "@votingworks/lsd",
  "version": "1.0.0",
  "private": true,
  "description": "Line Segment Detector for NodeJS",
  "license": "AGPL-3.0",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "bin": "bin/lsd.js",
  "files": [
    "addon",
    "bin",
    "build",
    "binding.gyp"
  ],
  "scripts": {
    "type-check": "tsc --build",
    "type-check:watch": "tsc --build --watch",
    "build": "node-gyp configure build && tsc --build tsconfig.build.json",
    "build:watch": "node-gyp configure build && tsc --build --watch tsconfig.build.json",
    "clean": "rm -rf build tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo",
    "lint": "pnpm type-check && eslint .",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "test": "is-ci test:coverage test:watch",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.(js|ts)": [
      "eslint --quiet --fix"
    ],
    "*.md": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "canvas": "2.9.1",
    "chalk": "^4.1.0",
    "node-addon-api": "^3.1.0"
  },
  "devDependencies": {
    "@types/bindings": "^1.5.0",
    "@types/jest": "^27.0.3",
    "@types/node": "16.11.29",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vx": "workspace:*",
    "is-ci-cli": "^2.2.0",
    "jest": "^27.3.1",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^11.0.0",
    "memory-streams": "^0.1.3",
    "prettier": "^2.6.2",
    "sort-package-json": "^1.50.0",
    "ts-jest": "^27.0.7",
    "typescript": "4.6.3"
  },
  "gypfile": true,
  "packageManager": "pnpm@5.18.10"
}

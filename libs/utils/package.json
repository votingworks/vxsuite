{
  "name": "@votingworks/utils",
  "version": "1.0.0",
  "private": true,
  "description": "Utilities for the monorepo.",
  "license": "GPL-3.0",
  "author": "VotingWorks Eng <eng@voting.works>",
  "main": "build/index.js",
  "types": "build/index.d.js",
  "files": [
    "build"
  ],
  "scripts": {
    "type-check": "tsc --build",
    "build": "tsc --build tsconfig.build.json",
    "clean": "rm -rf build tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo",
    "lint": "bun run type-check && eslint .",
    "lint:fix": "bun run type-check && eslint . --fix",
    "test": "TZ=America/Anchorage bun test",
    "test:watch": "TZ=America/Anchorage bun test --watch",
    "test:coverage": "TZ=America/Anchorage bun test --coverage",
    "test:ci": "TZ=America/Anchorage bun run build && bun run test:coverage --reporters=default --reporters=jest-junit --maxWorkers=6",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "eslint --quiet --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@votingworks/basics": "workspace:*",
    "@votingworks/types": "workspace:*",
    "base64-js": "1.5.1",
    "buffer": "^6.0.3",
    "debug": "4.3.4",
    "fast-text-encoding": "^1.0.2",
    "jszip": "^3.9.1",
    "lodash.setwith": "^4.3.2",
    "luxon": "^3.0.0",
    "randombytes": "^2.1.0",
    "readline": "^1.3.0",
    "tmp": "^0.2.1",
    "yargs": "17.7.1",
    "zod": "3.14.4"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^13.8.6",
    "@types/debug": "4.1.8",
    "@types/fast-text-encoding": "^1.0.1",
    "@types/kiosk-browser": "workspace:*",
    "@types/lodash.setwith": "^4.3.9",
    "@types/luxon": "^3.0.0",
    "@types/node": "16.18.23",
    "@types/randombytes": "^2.0.0",
    "@types/tmp": "0.2.4",
    "@types/yargs": "17.0.22",
    "@votingworks/fixtures": "workspace:*",
    "@votingworks/test-utils": "workspace:*",
    "eslint-plugin-vx": "workspace:*",
    "fast-check": "2.23.2",
    "fetch-mock": "9.11.0",
    "happy-dom": "^13.8.6",
    "is-ci-cli": "2.2.0",
    "jest-environment-jsdom": "^29.6.2",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "11.0.0",
    "node-fetch": "^2.6.0",
    "sort-package-json": "^1.50.0"
  }
}

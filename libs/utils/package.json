{
  "name": "@votingworks/utils",
  "version": "1.0.0",
  "private": true,
  "description": "Utilities for the monorepo.",
  "license": "GPL-3.0-only",
  "main": "build/index.js",
  "types": "build/index.d.js",
  "files": [
    "build"
  ],
  "scripts": {
    "type-check": "tsc --build",
    "build": "pnpm --filter $npm_package_name... build:self",
    "build:self": "tsc --build tsconfig.build.json",
    "clean": "pnpm --filter $npm_package_name... clean:self",
    "clean:self": "rm -rf build && tsc --build --clean tsconfig.build.json",
    "lint": "pnpm type-check && eslint .",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "test": "is-ci test:ci test:watch",
    "test:watch": "TZ=America/Anchorage vitest",
    "test:coverage": "TZ=America/Anchorage vitest --coverage",
    "test:ci": "TZ=America/Anchorage pnpm build && pnpm test:coverage",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@votingworks/basics": "workspace:*",
    "@votingworks/types": "workspace:*",
    "base64-js": "1.5.1",
    "buffer": "^6.0.3",
    "debug": "4.3.4",
    "fast-text-encoding": "^1.0.2",
    "jszip": "^3.9.1",
    "luxon": "^3.0.0",
    "randombytes": "^2.1.0",
    "readline": "^1.3.0",
    "tmp": "^0.2.1",
    "yargs": "17.7.1",
    "zod": "3.23.5"
  },
  "devDependencies": {
    "@types/debug": "4.1.8",
    "@types/fast-text-encoding": "^1.0.1",
    "@types/kiosk-browser": "workspace:*",
    "@types/luxon": "^3.0.0",
    "@types/node": "20.16.0",
    "@types/randombytes": "^2.0.0",
    "@types/tmp": "0.2.4",
    "@types/yargs": "17.0.22",
    "@vitest/coverage-istanbul": "^2.1.8",
    "@votingworks/fixtures": "workspace:*",
    "@votingworks/test-utils": "workspace:*",
    "eslint-plugin-vx": "workspace:*",
    "fast-check": "2.23.2",
    "fetch-mock": "9.11.0",
    "is-ci-cli": "2.2.0",
    "lint-staged": "11.0.0",
    "node-fetch": "^2.6.0",
    "sort-package-json": "^1.50.0",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@8.15.5"
}

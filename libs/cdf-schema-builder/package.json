{
  "name": "@votingworks/cdf-schema-builder",
  "version": "1.0.0",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "bin": {
    "cdf-schema-builder": "bin/cdf-schema-builder"
  },
  "files": [
    "bin",
    "build"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rm -rf build tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo",
    "lint": "pnpm type-check && eslint .",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "pre-commit": "lint-staged",
    "test": "is-ci test:ci test:watch",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit --maxWorkers=6",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk $(which jest) --runInBand --no-cache",
    "test:watch": "jest --watch",
    "type-check": "tsc --build"
  },
  "lint-staged": {
    "*.(js|ts)": [
      "eslint --quiet --fix"
    ],
    "*.md": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@votingworks/basics": "workspace:*",
    "happy-dom": "^13.8.6",
    "json-schema": "^0.4.0",
    "zod": "3.14.4"
  },
  "devDependencies": {
    "@types/jsdom": "20.0.0",
    "@types/json-schema": "^7.0.9",
    "@types/node": "16.18.23",
    "eslint-plugin-vx": "workspace:*",
    "is-ci-cli": "2.2.0",
    "lint-staged": "11.0.0",
    "sort-package-json": "^1.50.0"
  },
  "engines": {
    "node": ">= 12"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@8.1.0"
}

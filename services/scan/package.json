    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "typescript": "4.6.3",
    "wait-for-expect": "^3.0.2"
  },
  "engines": {
    "node": ">= 12"
  },
  "packageManager": "pnpm@5.18.10"
}
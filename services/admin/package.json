{
  "name": "@votingworks/admin",
  "version": "0.1.0",
  "private": true,
  "files": [
    "build",
    "schema.sql"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "build:watch": "tsc --build --watch tsconfig.build.json",
    "clean": "rm -rf build tsconfig.tsbuildinfo tsconfig.build.tsbuildinfo",
    "dev": "esr --cache ./src/index.ts",
    "format": "prettier '**/*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)' --write",
    "lint": "pnpm type-check && eslint .",
    "lint:fix": "pnpm type-check && eslint . --fix",
    "pre-commit": "lint-staged",
    "start": "node ./build/index.js",
    "test": "is-ci test:coverage test:watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk $(which jest) --runInBand --no-cache",
    "test:watch": "jest --watch",
    "type-check": "tsc --build",
    "type-check:watch": "tsc --build --watch"
  },
  "lint-staged": {
    "*.+(css|graphql|json|less|md|mdx|sass|scss|yaml|yml)": [
      "prettier --write"
    ],
    "*.+(js|jsx|ts|tsx)": [
      "eslint --quiet --fix"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "@votingworks/api": "workspace:*",
    "@votingworks/fixtures": "workspace:*",
    "@votingworks/logging": "workspace:*",
    "@votingworks/types": "workspace:*",
    "@votingworks/utils": "workspace:*",
    "better-sqlite3": "^7.5.3",
    "debug": "^4.3.4",
    "express": "^4.18.0",
    "js-sha256": "^0.9.0",
    "uuid": "^8.3.2",
    "zod": "3.14.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.5.0",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^26.0.6",
    "@types/node": "16.11.29",
    "@types/supertest": "^2.0.10",
    "@types/tmp": "^0.2.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "esbuild": "^0.14.29",
    "esbuild-runner": "^2.2.1",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vx": "workspace:*",
    "fast-check": "^2.23.2",
    "fs-extra": "^10.1.0",
    "is-ci-cli": "^2.1.2",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^10.5.3",
    "prettier": "^2.6.2",
    "sort-package-json": "^1.50.0",
    "supertest": "^6.0.1",
    "tmp": "^0.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "4.6.3"
  },
  "engines": {
    "node": ">= 16"
  }
}
